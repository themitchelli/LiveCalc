{
  "name": "@livecalc/cloud-worker",
  "version": "1.0.0",
  "description": "Cloud worker runtime for LiveCalc WASM execution with parity to local environment",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/main.js",
    "dev": "node --watch src/main.js",
    "test": "node --test src/**/*.test.js",
    "build": "echo 'No build step required for Node.js worker'",
    "docker:build": "docker build -f ../Dockerfile.worker -t livecalc-worker:latest ..",
    "docker:run": "docker run -p 3000:3000 --memory=4g --cpus=2 livecalc-worker:latest"
  },
  "keywords": [
    "livecalc",
    "wasm",
    "actuarial",
    "cloud",
    "worker",
    "simd"
  ],
  "author": "LiveCalc Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.20",
    "@types/ws": "^8.5.8"
  }
}
